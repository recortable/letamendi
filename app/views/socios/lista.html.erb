<h1>Las socias y los socios...</h1>

<div class="action" id="create_action">
  <div id="header">
    <%= link_to_function 'un socio o socia nueva',
      "Effect.toggle($('form'), 'slide');"
  %>
  </div>
  <label>&nbsp;</label>
  <div id="form" style="display: none">
    <% form_tag :action => 'create' do -%>
      n&uacute;mero de socio: <%= @number %>
      <label>&nbsp;</label>
      <%= render :partial => 'form' %>
      <br/>
      <%= submit_tag "pescar!" %>
    <% end -%>
  </div>
</div>


<h2>Personas con películas alquiladas </h2>
(ordenados por número de socio)<br/><br/>
<table>
  <tbody>
    <% for item in RentItem.open.by_member -%><tr class="<%= cycle 'par', 'impar' %>">
          <td class="item <%= item_class item %>">&nbsp;</td>
          <td>[<%= item.member.number unless item.member.nil? %>]</td>
          <td><%= link_to_member item.member %></td>
          <td><%= link_to_movie item.movie %></td>
        </tr><% end -%>
  </tbody>
</table>