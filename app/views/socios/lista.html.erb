<h1>Las socias y los socios...</h1>

<div class="action" id="create_action">
  <div id="header">
    <%= link_to_function 'un socio o socia nueva',
      "Effect.toggle($('form'), 'slide');"
  %>
  </div>
  <label>&nbsp;</label>
  <div id="form" style="display: none">
    <% form_tag :action => 'create' do -%>
      n&uacute;mero de socio: <%= @number %>
      <label>&nbsp;</label>
      <%= render :partial => 'form' %>
      <br/>
      <%= submit_tag "pescar!" %>
    <% end -%>
  </div>
</div>


<h2>Personas con películas alquiladas </h2>
<table>
  <tbody>
    <tr><td class="group" colspan="4">Alquiladas hoy</td></tr>
    <%= render :partial => 'item', :collection => RentItem.open_today.by_member %>
    <tr><td class="group" colspan="4">Deberían volver hoy</td></tr>
    <%= render :partial => 'item', :collection => RentItem.waiting.by_member %>
    <tr><td class="group" colspan="4">Con retraso</td></tr>
    <%= render :partial => 'item', :collection => RentItem.delayed.by_member %>
  </tbody>
</table>