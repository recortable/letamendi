
<table>
  <thead>
    <tr><td>Título</td><td>Género</td><td>Director</td></tr>
  </thead>
  <tbody>
    <% for movie in movies -%>
      <tr class="<%= cycle('par', 'impar') %>">
        <td><%= link_to movie.title, :controller => 'pelis',
  :action => 'ver', :id => movie.number %></td>
        <td><%= link_to movie.genre, :controller => 'pelis',
  :action => 'genero', :id => movie.genre %></td>
        <td><%= link_to movie.director, :controller => 'pelis',
  :action => 'director', :id => movie.director %></td>
      </tr>
    <% end -%>
  </tbody>
</table>